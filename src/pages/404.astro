---
import Layout from "../layouts/Layout.astro";
import { RiArrowRightUpLine } from "react-icons/ri";
import { Icon } from "astro-icon/components";
import socialsData from "../constants/socials.json";

const socials = socialsData;
---

<Layout title="Raghav Ruia â€¢ 404">
	<h1 class="text-[2rem] font-bold tracking-tight text-primary">404</h1>
	<h2 class="text-base font-medium tracking-tight text-title">
		Looks like you're lost. <a
			href="/"
			class="text-primary underline underline-offset-4">Go back home?</a
		>
	</h2>

	<Icon name="404" width="100%" height="100%" />

	<div class="text-sm font-normal text-body">
		<p class="text-base font-medium tracking-tight text-title">
			In the mean time, you can check out my socials from the links below.
		</p>
		<!-- Social icons section -->
		<div class="flex items-center gap-4 text-body mt-10 sm:mt-5">
			<!-- Resume -->
			<a
				href="/docs/Raghav_Ruia_Resume.pdf"
				target="_blank"
				rel="noopener noreferrer"
				class="flex items-center text-sm font-medium md:hover:text-primary transition-colors duration-200">
				<Icon name="tabler:file-text" size={16} class="mr-1" />
				<span>Resume</span>
			</a>

			<!-- LinkedIn -->
			<a
				href="https://linkedin.com/in/raghav-ruia"
				target="_blank"
				rel="noopener noreferrer"
				class="flex items-center text-sm font-medium md:hover:text-primary transition-colors duration-200">
				<Icon name="tabler:brand-linkedin" size={18} class="mr-1" />
				<span>Linkedin</span>
			</a>

			<!-- Mail -->
			<a
				href="mailto:raghavruia.work@gmail.com"
				class="flex items-center text-sm font-medium md:hover:text-primary transition-colors duration-200">
				<Icon name="tabler:mail" size={18}  class="mr-1"/>
				<span>Email</span>
			</a>
		</div>
	</div>
</Layout>
